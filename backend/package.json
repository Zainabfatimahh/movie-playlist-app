{
  "name": "movies-backend",
  "version": "1.0.0",
  "description": "Backend API for movies app",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "vitest",
    "db:push": "prisma db push",
