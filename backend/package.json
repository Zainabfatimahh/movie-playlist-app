    "lint": "eslint src",
    "format": "prettier --write src"
  },
  "dependencies": {
    "@fastify/cookie": "^9.0.0",
    "@fastify/cors": "^8.4.2",
    "@fastify/helmet": "^11.1.1",
    "@prisma/client": "^5.8.0",
    "argon2": "^0.31.2",
    "dotenv": "^16.3.1",
    "fastify": "^4.25.2",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.14.10",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "eslint": "^9.7.0",
    "prettier": "^3.3.3",
    "prisma": "^5.21.1",
    "tsx": "^4.17.0",
    "typescript": "^5.5.4",
    "vitest": "^1.6.0"
  }
